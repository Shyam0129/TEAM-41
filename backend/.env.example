# ========================================
# Application Settings
# ========================================
APP_NAME=Rexie
ENVIRONMENT=development
# For production, use: production

# ========================================
# URLs
# ========================================
# Development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Production (update these for AWS deployment)
# FRONTEND_URL=https://rexie.com
# BACKEND_URL=https://api.rexie.com

# ========================================
# JWT Settings
# ========================================
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ========================================
# Google OAuth 2.0
# ========================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret

# Development
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Production (update after deployment)
# GOOGLE_REDIRECT_URI=https://api.rexie.com/auth/callback

# ========================================
# Database - MongoDB
# ========================================
# Development (local)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=rexie_dev

# Production (MongoDB Atlas)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# MONGODB_DB_NAME=rexie_production

# ========================================
# Redis (Session & Cache)
# ========================================
# Development (local)
REDIS_URL=redis://localhost:6379

# Production (AWS ElastiCache)
# REDIS_URL=redis://your-elasticache-endpoint:6379

# ========================================
# Groq API (LLM)
# ========================================
GROQ_API_KEY=your-groq-api-key

# ========================================
# Twilio (SMS)
# ========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# Slack
# ========================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# ========================================
# AWS (Production Only)
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=rexie-files

# ========================================
# CORS Settings
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Production
# CORS_ORIGINS=https://rexie.com,https://www.rexie.com,https://api.rexie.com

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========================================
# Security
# ========================================
# Session secret for Starlette
SESSION_SECRET_KEY=your-session-secret-key-change-this

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ========================================
# Feature Flags
# ========================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_ADMIN_PANEL=false
